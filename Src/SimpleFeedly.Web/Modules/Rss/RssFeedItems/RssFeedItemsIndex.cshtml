@{
    ViewData["Title"] = Serenity.LocalText.Get("Db.Rss.RssFeedItems.EntityPlural");
}
<style type="text/css">
    html {
        scroll-behavior: smooth;
    }

    .card-container .card-item {
        height: 180px
    }

    .view-switch {
        margin-top: -11px
    }

    .card-container-height-auto {
        height: auto !important;
    }

    .slick-pane-right {
        position: relative !important;
    }

    .border-effect {
        display: block;        
        position: relative;
        padding: 4px;
    }

    .border-effect:before,
    .border-effect:after {
        position: absolute;
        content: "";
        transition: all .25s;
    }

    .border-effect:before {
        border-bottom: 2px solid #5FD3EF;
        border-left: 2px solid #5FD3EF;
        width: 10%;
        height: 33%;
        left: 0px;
        bottom: 0px;
    }

    .border-effect:after {
        border-top: 2px solid #5FD3EF;
        border-right: 2px solid #5FD3EF;
        width: 10%;
        height: 33%;
        top: 0px;
        right: 0px;
    }

    .border-effect:hover:before {
        width: 100%;
        height: 100%;
    }

    .border-effect:hover:after {
        width: 100%;
        height: 100%;
    }
    .card-container{
        overflow-y: auto;
    }
</style>


<div id="GridDiv"></div>

<script type="text/javascript">
    jQuery(function () {
        new SimpleFeedly.Rss.RssFeedItemsGrid($('#GridDiv'), {}).init();
    });
</script>